{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json?source",
  "tasks": {
    "run": "deno run -A main.tsx",
    "watch": "deno run -A --watch main.tsx",
    "serve": "deno run -A dist/main.js",
    "build": "deno task build:public && deno bundle main.tsx dist/main.js",
    "build:public": "sh -c 'rm -rf dist ; mkdir -p dist ; cp -a public dist'",
    "docker": "deno task docker:build && deno task docker:run",
    "docker:build": "docker build -t deno-template:latest ./.devcontainer/.",
    "docker:run": "docker run -u vscode -p 8000:8000 -v $DENO_DIR:/home/vscode/.cache/deno -v $(pwd):/workspaces/deno-template -w /workspaces/deno-template --rm --init --name=deno-template deno-template:latest deno task run"
  },
  "imports": {
    "~/": "./",
    "@twind/core": "https://esm.sh/@twind/core@1.1.2",
    "@twind/preset-autoprefix": "https://esm.sh/@twind/preset-autoprefix@1.0.6",
    "@twind/preset-tailwind": "https://esm.sh/@twind/preset-tailwind@1.1.3",
    "@twind/with-react/": "https://esm.sh/@twind/with-react@1.1.2/",
    "react": "https://esm.sh/react@18.2.0",
    "react/": "https://esm.sh/react@18.2.0/",
    "react-dom/": "https://esm.sh/react-dom@18.2.0/",
    "hono": "https://deno.land/x/hono@v2.7.2/mod.ts",
    "hono/middleware": "https://deno.land/x/hono@v2.7.2/middleware.ts",
    "std/http/server": "https://deno.land/std@0.176.0/http/server.ts"
  },
  "fmt": {
    "options": {
      "lineWidth": 100,
      "proseWrap": "never",
      "semiColons": false,
      "singleQuote": true
    }
  }
}
